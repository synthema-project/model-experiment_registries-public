pipeline {
    agent {
        node {
            label 'jenkins-dev'
        }
    }

    stages {
        stage("Deployment"){
            steps {
                script {
                    if (params.standalone) {
                        sh 'cp templates/dotenv_standalone .env'
                    } else {
                        sh 'cp templates/dotenv_stack .env'
                    }
                }

                withKubeConfig([credentialsId: 'k8s-admin']) {
                    sh 'kubectl apply -f k8/deployment.yaml'
                    sleep 20
               }
            }
        }
        stage("Functional test") {
            steps {
                script {
                    withKubeConfig([credentialsId: 'k8s-admin']) {
                        // Set up port forwarding from the service's port to a local port (e.g., 8080)
                        sh 'kubectl port-forward svc/mlflow-dsb-svc 8080:80 -n synthema-dev &'

                        // Wait a bit to ensure port forwarding is up
                        sleep(5)

                        // Perform a health check on the forwarded port
                        sh "curl -f http://localhost:8080/health"

                        // Optional: kill the port-forward process after the test
                        sh 'pkill -f "kubectl port-forward"'
                    }
                }
        }
    }
}
    }
}
    }
    post{
        failure {
            withKubeConfig([credentialsId: 'k8s-admin']) {
                 //sh 'kubectl delete -f k8/deployment.yaml'
            }
        //     // slackSend (color: "#FF0000", message: "Job FAILED: '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
        //     sh 'docker image rm ${APP_NAME}:test &> /dev/null || True'
        //     sh 'DOCKER_TAG=test docker compose down --rmi all'
        }

        // success{
        //     slackSend (color: "#008000", message: "Job SUCCESSFUL: '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
        // }
    }
}
